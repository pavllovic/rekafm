                span(aria-hidden='true')
              div(class='swiper swiper-thumbs js-swiper-thumb' thumbsSlider="")
                div(class='swiper-wrapper')
                  each slide in slides
                    div(class='swiper-slide ui-thumb')
                      span(class='image')
                        img(src=require(`Images/build/1/thumb/${slide}.jpg`))
