              - const slides = [1,2,3,4,5,6]
                each slide in slides 
                  div(class='swiper-slide' aria-roledescription='slide')
                    div(class='image')
                      picture 
                        source(srcset=`${require(`Images/build/1/slides/${slide}.webp`)} 1280w, ${require(`Images/build/1/slides/${slide}-2x.webp`)} 2560w, ${require(`Images/build/1/slides/${slide}-4x.webp`)} 4096w`
                          type='image/webp')
